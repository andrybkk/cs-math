    content("b", $ar(b)$, anchor: "east")
    
    line((0,0), (0, 2.5), mark: (end: "stealth"), stroke: (paint: red, thickness: 2pt), name: "c")
    content("c", $[ar(a), ar(b)]$, anchor: "south")
    
